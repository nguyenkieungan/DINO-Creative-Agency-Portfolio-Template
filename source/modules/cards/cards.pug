mixin ourteam(teams)
  each per in teams
    .col-12.col-md-4
      .card
        .card__image
          img(src=per.imgUrl)
        .card__info.text-center
          p.card__name= per.name
          p.card__position= per.position
        .card__social.text-center
          +six-socials


mixin intro_goal(goals)
  each goal in goals
    .card__goal.col-12.col-md-6
      .card__icon
        img(src=goal.icon)
      h3.card__ictitle= goal.ictitle
      p.card__detail= goal.detail
      a.card__more(href=goal.link)
        img(src="images/arrow.png")


mixin pricing_table(packs)
  each pack, index in packs
    .col-12.col-md-4
      div(class= (index == 1 ? "card__highlight" : undefined)).card__price
        .card__header
          h5.card__title.pull-left= pack.title
          .card__infoprice.pull-right
            span.value= pack.value
            span.currency $
            span.duration mo
        .card__content
          ul.card__features
            li #{pack.webcount} Beautiful Website
            li #{pack.domaincount} Domain name
            li Unlimited Bandwidth
            li Unlimited Pageviews
        .card__footer
          a.btn.btn__price(href="google.com") Sign up
